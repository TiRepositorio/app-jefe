<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,ContentDescription,Autofill,RtlHardcoded,UselessParent" >

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="2dip"
        android:layout_weight="0.08"
        android:clipToPadding="true"
        android:overScrollMode="never"
        >

        <TableLayout
            android:id="@+id/detalle_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dopo"
                    android:ellipsize="end"
                    android:gravity="center_horizontal|center_vertical"
                    android:maxLines="1"
                    android:scrollbars="horizontal"
                    android:text=""
                    android:width="5sp"
                    style="@style/cabeceraSubTabla"/>

                <TextView
                    android:layout_width="60sp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:scrollbars="horizontal"
                    android:text="Sup."
                    style="@style/cabeceraSubTabla" />


                <TextView
                    android:id="@+id/d2"
                    android:layout_width="80sp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:scrollbars="horizontal"
                    android:text="Codigo"
                    style="@style/cabeceraSubTabla"/>

                <TextView
                    android:id="@+id/d3"
                    android:layout_width="200sp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:scrollbars="horizontal"
                    android:text="Descripcion"
                    style="@style/cabeceraSubTabla"/>



            </TableRow>

            <ListView
                android:id="@+id/lvdet_vendedores"
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:paddingTop="1dip"
                android:scrollbars="none" />




        </TableLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:drawable/bottom_bar"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Seleccionar"
            android:layout_width="fill_parent"
            android:background="@color/verdeOscuro"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:text="Seleccionar"
            android:textColor="@color/textoClaro"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="fill_parent"
            android:background="@color/fondoFooter"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:text="Volver"
            android:textColor="@color/textoClaro"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>



</LinearLayout>
